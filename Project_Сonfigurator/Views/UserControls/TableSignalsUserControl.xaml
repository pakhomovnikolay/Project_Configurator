<UserControl x:Class="Project_Сonfigurator.Views.UserControls.TableSignalsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:Project_Сonfigurator.Views.UserControls"
             xmlns:converter="clr-namespace:Project_Сonfigurator.Infrastructures.Converters"
             d:Background="AliceBlue"
             d:DataContext="{Binding TableSignalsUserControlViewModel, Source={StaticResource Locator}}"
             d:DesignHeight="{Binding WindowHeight}"
             d:DesignWidth="{Binding WindowWidth}"
             >
    <Grid>
        
        <!--Сетка-->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Верхняя панель-->
        <Border Grid.Row="0" BorderThickness="1,1,1,1" Background="#FFCCFFCC" BorderBrush="Black">
            <DockPanel>
                <Button Content="Генерировать структуру" Width="200" Margin="2" FontWeight="Bold"
                        Style="{StaticResource CustomButtonStyle}"
                        Command="{Binding CmdGenerateTable}"
                        />
                <TextBlock Text="{Binding Description}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" FontSize="16"/>
            </DockPanel>
        </Border>

        <!--Данные-->
        <DataGrid Grid.Row="1"
                  BorderThickness="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  GridLinesVisibility="None"
                  CanUserResizeColumns="False"
                  SelectionMode="Single"
                  SelectionUnit="CellOrRowHeader"
                  Background="Gray"
                  HeadersVisibility="Column"
                  ScrollViewer.CanContentScroll="False"
                  ItemsSource="{Binding Modules}"
                  >

            <DataGrid.Resources>

                <converter:HeightModuleConverter x:Key="HeightModuleConverter" HeighRow="25"/>

                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="Height" Value="auto"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="BorderThickness" Value="1,1,0,1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="Height" Value="90"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>

            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTemplateColumn Width="25">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Left" HorizontalAlignment="Center" Text="Имя УСО" Margin="0,0,0,5">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2,0,0,1" BorderBrush="Black" Background="{Binding ColorUSO}">
                                <Border.Height>
                                    <Binding Path="Channels.Count" Converter="{StaticResource HeightModuleConverter}"/>
                                </Border.Height>
                                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                                           Text="{Binding NameUSO}">
                                    <TextBlock.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="25">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Left" HorizontalAlignment="Center" Text="Тип модуля" Margin="0,0,0,5">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="White">
                                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                                           Text="{Binding Type}">
                                    <TextBlock.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="25">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Left" HorizontalAlignment="Center" Text="Имя модуля" Margin="0,0,0,5">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1,0,0,1" BorderBrush="Black">
                                <Border.Background>
                                    <Binding Path="Name" Converter="{StaticResource BrushModuleNameConverter}"/>
                                </Border.Background>
                                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"
                                           Text="{Binding Name}">
                                    <TextBlock.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="25">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Left" HorizontalAlignment="Center" Text="№ канала" Margin="0,0,0,5">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="LightGray" Height="25">
                                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Index}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Идентификатор"/>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Background="LightGray"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="White" Height="25">
                                            <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center" Text="{Binding Id}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="800">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Наименование сигнала"/>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Background="LightGray"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="White" Height="25">
                                            <TextBox BorderThickness="0" VerticalContentAlignment="Center" Text="{Binding Name}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;переменной"/>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding Channels}">
                                    <ItemsControl.Resources>
                                        <converter:VisibilityModuleConverter x:Key="VisibilityModuleConverter" CountRow="8"/>
                                    </ItemsControl.Resources>
                                    <ItemsControl.Visibility>
                                        <Binding Path="Type" Converter="{StaticResource VisibilityModuleConverter}"/>
                                    </ItemsControl.Visibility>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" Background="LightGray"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="LightGray" Height="25">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding VarName}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="LightGray">
                                    <Border.Resources>
                                        <converter:VisibilityModuleConverter x:Key="VisibilityModuleConverter" CountRow="32"/>
                                    </Border.Resources>
                                    <Border.Visibility>
                                        <Binding Path="Type" Converter="{StaticResource VisibilityModuleConverter}"/>
                                    </Border.Visibility>
                                    <Border.Height>
                                        <Binding Path="Channels.Count" Converter="{StaticResource HeightModuleConverter}"/>
                                    </Border.Height>
                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                               Text="{Binding Channels[0].VarName}"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="25">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Text="Бит" Margin="0,0,0,5">
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="LightGray" Height="25">
                                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Bit}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Адрес"/>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Channels}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1,0,0,1" BorderBrush="Black" Background="White" Height="25">
                                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Address}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.Header>
                        <Border BorderThickness="0,0,2,1" BorderBrush="Black" Background="White">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;переменной&#x0a;для ВУ"/>
                        </Border>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding Channels}">
                                    <ItemsControl.Resources>
                                        <converter:VisibilityModuleConverter x:Key="VisibilityModuleConverter" CountRow="8"/>
                                    </ItemsControl.Resources>
                                    <ItemsControl.Visibility>
                                        <Binding Path="Type" Converter="{StaticResource VisibilityModuleConverter}"/>
                                    </ItemsControl.Visibility>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" Background="LightGray"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="1,0,2,1" BorderBrush="Black" Background="LightGray" Height="25">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding VarNameVU}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Border BorderThickness="1,0,2,1" BorderBrush="Black" Background="LightGray">
                                    <Border.Resources>
                                        <converter:VisibilityModuleConverter x:Key="VisibilityModuleConverter" CountRow="32"/>
                                    </Border.Resources>
                                    <Border.Visibility>
                                        <Binding Path="Type" Converter="{StaticResource VisibilityModuleConverter}"/>
                                    </Border.Visibility>
                                    <Border.Height>
                                        <Binding Path="Channels.Count" Converter="{StaticResource HeightModuleConverter}"/>
                                    </Border.Height>
                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                               Text="{Binding Channels[0].VarNameVU}"/>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
                    
        </DataGrid>
                
    </Grid>
</UserControl>
