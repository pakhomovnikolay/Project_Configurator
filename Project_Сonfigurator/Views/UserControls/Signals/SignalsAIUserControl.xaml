                                                                  BorderBrush="#FFACACAC"
                                                                  Height="{Binding ElementName=border, Path=ActualHeight}">
                                                <TextBlock HorizontalAlignment="Center"
                                                           TextAlignment="Center"
                                                           Text="{Binding IndexNA}"/>
                                            </ToggleButton>
                                            <Popup AllowsTransparency="False"
                                                   StaysOpen="False"
                                                   PlacementTarget="{Binding ElementName=ListModule}"
                                                   IsOpen="{Binding IsChecked, ElementName=ListModule}">
                                                <ListBox MaxHeight="250"
                                                         ItemsSource="{Binding UMPNAList, Source={StaticResource Lists}}"
                                                         SelectedIndex="{Binding IndexNA, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                                                         />
                                            </Popup>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
