                                <DataTemplate>
                                    <TextBox Style="{StaticResource TextBoxCenterCustomStyle}" Text="{Binding AddresUTS, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource TextBlockCenterCustomStyle}" Text="{Binding AddresUTS}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Отображать&#x0a;в кгс\см2" Width="100">
                            
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Style="{StaticResource TextBoxCenterCustomStyle}" Text="{Binding ConverterKgs, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
