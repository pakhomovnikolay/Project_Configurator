                                                            <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                                       Text="{Binding ControlUVS.OffSecondaryAfterProtTimer}"
                                                                       />
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                                
                                            </DataGridTemplateColumn>

                                        </DataGrid.Columns>

                                    </DataGrid>
                                </TabItem>

                            </TabControl>

                        </TabItem>

                        <TabItem Header="Карта предельных параметров">

                            <DataGrid BorderThickness="0"
                                      BorderBrush="Black"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False"
                                      GridLinesVisibility="None"
                                      CanUserResizeColumns="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Background="Gray"
                                      HeadersVisibility="Column"
                                      ItemsSource="{Binding SelectedParam.KTPRAS}"
                                      SelectedItem="{Binding SelectedKTPRAS}"
                                      >

                                <DataGrid.Resources>

                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="Black"/>
                                                <Setter Property="Background" Value="LightGoldenrodYellow"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="BorderThickness" Value="1,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
                                    </Style>

                                </DataGrid.Resources>

                                <DataGrid.Columns>

                                    <DataGridTemplateColumn Width="30">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="1,2,0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="№" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="2,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                               Text="{Binding Param.Index}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="120">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Идентификатор" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding Param.Id, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding Param.Id}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="700">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Описание сигнала" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Margin="3,0,0,0"
                                                             Text="{Binding Param.Description, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock VerticalAlignment="Center"
                                                               Margin="5,0,0,0"
                                                               Text="{Binding Param.Description}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="140">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;переменной" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                               Text="{Binding Param.VarName, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="30">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Text="Инв." Margin="0,0,0,5">
                                                    <TextBlock.LayoutTransform>
                                                        <RotateTransform Angle="-90"/>
                                                    </TextBlock.LayoutTransform>
                                                </TextBlock>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding Param.Inv, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding Param.Inv}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="80">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White"
                                                    ToolTip="{Binding TypeSignal, Source={StaticResource ToolTipParam}}"
                                                    >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0">
                                                        <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                        <Border.LayoutTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </Border.LayoutTransform>
                                                    </Border>
                                                    <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Text="Тип&#x0a;сигнала" Margin="0,-10,0,5"/>
                                                </Grid>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding Param.TypeSignal, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding Param.TypeSignal}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="80">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Смещение" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding Param.Address, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding Param.Address}">
                                                        <TextBlock.InputBindings>
                                                            <MouseBinding MouseAction="RightClick"
                                                                          Command="{Binding DataContext.CmdChangeAddressKTPRAS,
                                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding Param.Index}"/>
                                                        </TextBlock.InputBindings>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White"
                                                    ToolTip="{Binding StateNA, Source={StaticResource ToolTipParam}}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0">
                                                        <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                        <Border.LayoutTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </Border.LayoutTransform>
                                                    </Border>
                                                    <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Text="Состояние&#x0a;МПНА" Margin="0,-10,0,5"/>
                                                </Grid>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border x:Name="border" BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <StackPanel>
                                                        <ToggleButton x:Name="ListModule"
                                                                      BorderThickness="0"
                                                                      VerticalContentAlignment="Center"
                                                                      HorizontalContentAlignment="Stretch"
                                                                      Background="#FFE5E5E5"
                                                                      BorderBrush="#FFACACAC"
                                                                      Height="{Binding ElementName=border, Path=ActualHeight}">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                       TextAlignment="Center"
                                                                       Text="{Binding StateUMPNA}">
                                                            </TextBlock>
                                                        </ToggleButton>
                                                        <Popup AllowsTransparency="False"
                                                               StaysOpen="False"
                                                               PlacementTarget="{Binding ElementName=ListModule}"
                                                               IsOpen="{Binding IsChecked, ElementName=ListModule}">
                                                            <ListBox MaxHeight="250"
                                                                     ItemsSource="{Binding StateNA, Source={StaticResource Lists}}"
                                                                     SelectedIndex="{Binding StateUMPNA, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}">
                                                            </ListBox>
                                                        </Popup>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                        
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox BorderThickness="0" Background="Transparent"
                                                             TextAlignment="Center" VerticalContentAlignment="Center"
                                                             Text="{Binding StateUMPNA, UpdateSourceTrigger=PropertyChanged}">
                                                        <TextBox.InputBindings>
                                                            <MouseBinding Gesture="LeftDoubleClick"
                                                                          Command="{Binding DataContext.CmdSelecteStateUMPNA,
                                                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                          />
                                                        </TextBox.InputBindings>
                                                    </TextBox>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White"
                                                    ToolTip="{Binding SettingsWarning, Source={StaticResource ToolTipParam}}"
                                                    >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0">
                                                        <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                        <Border.LayoutTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </Border.LayoutTransform>
                                                    </Border>
                                                    <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Text="Настройка&#x0a;сигнализации" Margin="0,-10,0,5"/>
                                                </Grid>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding TypeWarning, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding TypeWarning}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2,2,2" BorderBrush="Black" Background="White"
                                                    ToolTip="{Binding TypeParamKTPRA, Source={StaticResource ToolTipParam}}"
                                                    >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Row="0">
                                                        <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                        <Border.LayoutTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </Border.LayoutTransform>
                                                    </Border>
                                                    <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Text="Тип&#x0a;параметра" Margin="0,-10,0,5"/>
                                                </Grid>
                                            </Border>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,2,0" BorderBrush="Black">
                                                    <TextBox TextAlignment="Center" VerticalContentAlignment="Center"
                                                             BorderThickness="0" Background="Transparent"
                                                             Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                                             />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,2,0" BorderBrush="Black">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center"
                                                               Text="{Binding Type}"
                                                               />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>

                            </DataGrid>

                        </TabItem>

                    </TabControl>

                </GroupBox>

            </Grid>

        </TabItem>

    </TabControl>
    
</UserControl>
