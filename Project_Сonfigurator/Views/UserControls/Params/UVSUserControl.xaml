<UserControl x:Class="Project_Сonfigurator.Views.UserControls.Params.UVSUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             xmlns:l="clr-namespace:Project_Сonfigurator.Views.UserControls.Params"
             xmlns:vm="clr-namespace:Project_Сonfigurator.ViewModels.UserControls.Params"
             d:Background="AliceBlue"
             d:DesignHeight="800"
             d:DesignWidth="1740"
             
             d:DataContext="{d:DesignInstance vm:UVSUserControlViewModel, IsDesignTimeCreatable=True}"
             Style="{StaticResource UserControlStyle}"
             Tag="{Binding Description}"
             >
    <Grid>
        
        <!--Сетка-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MaxWidth="500" MinWidth="135"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Row="1" Width="2" Background="Transparent" Panel.ZIndex="9999"/>

        <!--Список вспомсистем-->
        <GroupBox Grid.Column="0" BorderBrush="Black">
            <GroupBox.Header>
                <TextBlock Margin="5,0" FontWeight="Bold" Text="Список вспомсистем"/>
            </GroupBox.Header>
            <Grid>

                <!--Сетка-->
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <!--Список вспомсистем-->
                <ListView ItemsSource="{Binding DataView}"
                          SelectedItem="{Binding SelectedUVS}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Grid.Column="0" Fill="LightGray" Width="5" Height="5"/>
                                <TextBlock Grid.Column="1" Margin="5,0,0,0" Text="{Binding Description}"/>
                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--Команды управления-->
                <Grid Grid.Row="1" Margin="0,2,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="0.5" ToolTip="Добавить вспомсистему"
                            Style="{StaticResource CustomButtonStyle}"
                            Command="{Binding CmdAddUVS}">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <fa:FontAwesome Grid.Column="0" Icon="Solid_Plus" Foreground="Green" FontSize="12" TextAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Grid.Column="1" Margin="0.5" ToolTip="Удалить выбранную вспомсистему"
                            Style="{StaticResource CustomButtonStyle}"
                            Command="{Binding CmdDeleteUVS}"
                            >
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <fa:FontAwesome Grid.Column="0" Icon="Solid_Minus" Foreground="Red" FontSize="12"  TextAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                    <Button Grid.Column="2" Margin="0.5" ToolTip="Импортировать вспомсистемы из таблицы сигналов"
                            Content="Импорт из ТБ"
                            Style="{StaticResource CustomButtonStyle}"
                            Command="{Binding CmdImportUVS}"
                            >
                    </Button>

                </Grid>

            </Grid>
        </GroupBox>

        <!--Данные выбранной задвижки-->
        <GroupBox Grid.Column="1" BorderBrush="Black">
            <GroupBox.Header>
                <TextBlock Margin="5,0" FontWeight="Bold" Text="{Binding SelectedUVS.Description, FallbackValue='Выберите вспомсистему', TargetNullValue='Добавьте вспомсистему'}" />
            </GroupBox.Header>

            <TabControl Grid.Row="1" DataContext="{Binding SelectedUVS}">
                <TabControl.Template>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.Row="0" Margin="0">
                                <TabPanel IsItemsHost="True" Margin="5,5,0,0" Grid.Column="1"/>

                            </ScrollViewer>
                            <ContentPresenter x:Name="PART_SelectedContentHost" Margin="0,5,0,0" ContentSource="SelectedContent" Grid.Row="1"/>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>

                <TabItem Header="Настройки">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxWidth="1700" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="55"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="6" BorderThickness="2,2,0,2" BorderBrush="Black" Background="White">
                                <DockPanel>
                                    <Border BorderThickness="0" BorderBrush="Black" Background="White" Width="250">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Наименование параметра"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="White" Width="100">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;переменной"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="White" Width="100">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Коротное&#x0a;обозначение"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="White" Width="100">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Номер&#x0a;секции шин"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="White" Width="100">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Номер&#x0a;группы"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="White" Width="200">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;группы"/>
                                    </Border>
                                </DockPanel>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="5" BorderThickness="1,2,2,0" BorderBrush="Black" Background="White">
                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Настроечные параметры"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="5" BorderThickness="1,1,2,2" BorderBrush="Black" Background="White">
                                <DockPanel>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Background="White" Width="90"
                                            ToolTip="Возможность установки резерва в группе"
                                            >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0">
                                                <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                <Border.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </Border.LayoutTransform>
                                            </Border>
                                            <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0" Text="Наличие&#x0a;резервного&#x0a;насоса"/>
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Background="White" Width="90"
                                            ToolTip="
0 - Без датчика давления&#x0a;
1 - Дискретный датчик давления&#x0a;
2 - Аналоговый датчик давления"
                                            >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0">
                                                <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                <Border.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </Border.LayoutTransform>
                                            </Border>
                                            <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0" Text="Тип датчика&#x0a;давления"/>
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Background="White" Width="90"
                                            ToolTip="Флаг наличия контроля цепей включения МП"
                                            >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0">
                                                <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                <Border.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </Border.LayoutTransform>
                                            </Border>
                                            <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0" Text="Наличие&#x0a;цепей&#x0a;включения"/>
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Background="White" Width="90"
                                            ToolTip="Флаг использовать контроль&#x0a;давления, один датчик на группу"
                                            >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0">
                                                <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                <Border.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </Border.LayoutTransform>
                                            </Border>
                                            <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0" Text="Одно&#x0a;давление&#x0a;на группу"/>
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Background="White" Width="90"
                                            ToolTip="
1 - Централизованная МС&#x0a;
2 - Индивидуальная МС&#x0a;
3 - НОУ (НОУ ССВД)&#x0a;
4 - Приточные вентиляторы&#x0a;
5 - Крышные вентиляторы&#x0a;
6 - Пожарные насос"
                                            >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0">
                                                <fa:FontAwesome Icon="Solid_CaretRight" Foreground="Red"/>
                                                <Border.LayoutTransform>
                                                    <RotateTransform Angle="90"/>
                                                </Border.LayoutTransform>
                                            </Border>
                                            <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" Margin="0,-10,0,0" Text="Тип группы&#x0a;вспомсистем"/>
                                        </Grid>
                                    </Border>
                                </DockPanel>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="11" BorderThickness="2,0,2,2" BorderBrush="Black" Background="White">
                                <DockPanel>
                                    <Border BorderThickness="0,0,0,0" BorderBrush="Black" Width="250">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray" Width="100">
                                        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="{Binding VarName}"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Width="100">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding ShortDescription, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Width="100">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding IndexEC, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="1,0,0,0" BorderBrush="Black" Width="100">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding IndexGroup, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="1,0,1,0" BorderBrush="Black" Width="199">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding DescriptionGroup, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Width="90">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding Reservable, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Width="90">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding TypePressure, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Width="90">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding COz, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Width="90">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding OnePressureSensorGroup, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="Black" Width="90">
                                        <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                             Text="{Binding TypeGroup, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                </DockPanel>
                            </Border>

                            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="16" Margin="0,2" CornerRadius="2"
                                    BorderThickness="2" BorderBrush="Black" Background="#FFCCFFCC">
                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Text="Карта временных уставок"/>
                            </Border>
                            <DataGrid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="16"
                                      BorderThickness="0"
                                      BorderBrush="Black"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False"
                                      GridLinesVisibility="None"
                                      CanUserResizeColumns="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Background="Gray"
                                      HeadersVisibility="Column"
                                      ItemsSource="{Binding Setpoints}"
                                      >

                                <DataGrid.Resources>

                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="Black"/>
                                                <Setter Property="Background" Value="LightGoldenrodYellow"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="BorderThickness" Value="1,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
                                    </Style>

                                </DataGrid.Resources>

                                <DataGrid.Columns>

                                    <DataGridTemplateColumn Width="35">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="1,2,0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="№" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="2,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                           Text="{Binding Index}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="110">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Идентификатор" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                           Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Наименование таймера" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"
                                                           Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Имя&#x0a;переменной" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                           Text="{Binding VarName, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Адрес" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                                           Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Значение&#x0a;уставки" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,0,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                                           Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.Header>
                                            <Border BorderThickness="0,2,2,2" BorderBrush="Black" Background="White">
                                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="Ед.&#x0a;измерения" Margin="0,0,0,5"/>
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="1,0,2,0" BorderBrush="Black" Background="LightGray">
                                                    <TextBox BorderThickness="0" TextAlignment="Center" VerticalContentAlignment="Center"
                                                           Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>

                            </DataGrid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Ввод\Вывод">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxWidth="1700" HorizontalScrollBarVisibility="Auto">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="auto" MaxHeight="500"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="auto" MaxHeight="500"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Margin="0,2" CornerRadius="2"
                                    BorderThickness="2" BorderBrush="Black" Background="#FFCCFFCC">
                                <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Text="Ссылки дискретных входов"/>
                            </Border>
                            <DataGrid Grid.Row="1"
                                      BorderThickness="0"
                                      BorderBrush="Black"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeRows="False"
                                      GridLinesVisibility="None"
                                      CanUserResizeColumns="False"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Background="Gray"
                                      HeadersVisibility="Column"
                                      ItemsSource="{Binding DataContext.DataViewInputParam, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding DataContext.SelectedInputParam, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      >

                                <DataGrid.Resources>

                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Height" Value="25"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="Black"/>
                                                <Setter Property="Background" Value="LightGoldenrodYellow"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                        <Setter Property="BorderThickness" Value="1,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>

                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="Background" Value="Gray"/>
